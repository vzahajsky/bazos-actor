{
    "title": "Bazos.cz crawler input schema",
    "description": "",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "searchQueries": {
            "title": "Search queries",
            "type": "array",
            "description": "Search queries to search and merge results in one run",
            "prefill": [
                "bmw 1200gs",
                "1200 gs"
            ],
            "editor": "stringList",
            "maxItems": 5,
            "uniqueItems": true
        },
        "minPrice": {
            "title": "Price from",
            "type": "integer",
            "description": "Lowest price",
            "editor": "number",
            "nullable": true
        },
        "maxPrice": {
            "title": "Price to",
            "type": "integer",
            "description": "Highest price",
            "editor": "number",
            "nullable": true
        },
        "maxRequestsPerCrawl": {
            "title": "Max Requests per Crawl",
            "type": "integer",
            "description": "Approximate number of how many ads you want to load.",
            "default": 100
        }
    },
    "required": [
        "searchQueries"
    ]
}
